; train_eval_infer.config
; 2025/10/20 (C) antillia.com
; PHE-SICH-CT-IDS segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 2

base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.05
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00007

clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/PHE-SICH-CT-IDS/train/images/"
masks_dir     = "../../../dataset/PHE-SICH-CT-IDS/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.5
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/PHE-SICH-CT-IDS/valid/images/"
masks_dir  = "../../../dataset/PHE-SICH-CT-IDS/valid/masks/"

[test] 
images_dir = "../../../dataset/PHE-SICH-CT-IDS/test/images/"
masks_dir  = "../../../dataset/PHE-SICH-CT-IDS/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"

; PHE-SICH-CT-IDS
; rgb color map dict for 2 classes.
;              Hemorrhage: white
rgb_map = {(0,0,0):0,(255,255,255):1}


